.search-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8rpx 28rpx;
  border-radius: 30rpx;
  background-color: #F2F2F2;
}

.search-container-input{
  color: #272727;
  font-size: 26rpx;
  flex-grow: 1;
  margin-left: 16rpx;
}

.header-content{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
  height: 200rpx;
  border-top: 1px solid #EFEFEF;
  border-bottom: 1px solid #EFEFEF;
  padding: 0 30rpx
}

.header-content-item{
  padding: 40rpx;
  text-align: center;
  font-size: 24rpx;
}

.header-content-img{
  margin: 0 auto;
  padding-bottom: 24rpx;
  width:60rpx;
  height:60rpx
}